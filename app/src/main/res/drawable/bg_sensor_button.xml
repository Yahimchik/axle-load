<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Градиент от темно-синего к синему -->
    <gradient
        android:startColor="#455A64"
        android:endColor="#607D8B"
        android:angle="270"/>

    <!-- Закругленные углы -->
    <corners android:radius="20dp"/>

    <!-- Тень через слой (нужен для elevation на API < 21) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
