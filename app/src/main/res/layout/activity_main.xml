<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EEEEEE"
    tools:context=".ui.activity.MainActivity">

    <!-- Кнопка смены языка -->
    <ImageButton
        android:id="@+id/btnChangeLang"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/change_langauge"
        android:src="@drawable/ic_flag_united_kingdom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView для списка языков -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/langRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:scrollbars="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/btnChangeLang"
        app:layout_constraintBottom_toBottomOf="@id/btnChangeLang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangeLang"
        tools:ignore="RtlSymmetry" />


    <!-- Контейнер для карточек -->
    <LinearLayout
        android:id="@+id/sensorButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnChangeLang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- DPS card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buttonDPS"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/btn_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/iconDPS"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/DPS"
                    android:src="@drawable/ic_device_dps"
                    app:tint="@null" />

                <TextView
                    android:id="@+id/textDPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/DPS"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BT COM MINI card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buttonBTComMini"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/btn_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/iconBTComMini"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/BT_COM_MINI"
                    android:src="@drawable/ic_bt_com_mini"
                    app:tint="@null" />

                <TextView
                    android:id="@+id/textBTComMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/BT_COM_MINI"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
