<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Название устройства -->
        <TextView
            android:id="@+id/deviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/device_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- MAC -->
        <TextView
            android:id="@+id/deviceMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_mac"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/deviceMacValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceName"
            app:layout_constraintStart_toEndOf="@id/deviceMac"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" />

        <!-- RSSI -->
        <TextView
            android:id="@+id/deviceRssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_rssi"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceMac"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/deviceRssiValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceMac"
            app:layout_constraintStart_toEndOf="@id/deviceRssi"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />

        <!-- Тип устройства -->
        <TextView
            android:id="@+id/deviceWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceRssi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/deviceWeightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceRssi"
            app:layout_constraintStart_toEndOf="@id/deviceWeight"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />

        <!-- Статус -->
        <TextView
            android:id="@+id/devicePressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pressure"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceWeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/devicePressureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/deviceWeight"
            app:layout_constraintStart_toEndOf="@id/devicePressure"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
