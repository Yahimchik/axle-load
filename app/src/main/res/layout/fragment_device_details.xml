<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/mainInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="26dp">

                    <!-- ========== Верхний контейнер (сигнал + батарея) ========== -->

                    <ImageView
                        android:id="@+id/signalPicture"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/device_mac"
                        android:src="@drawable/ic_signal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/signalValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/signalPicture"
                        app:layout_constraintTop_toTopOf="@id/signalPicture" />

                    <ImageView
                        android:id="@+id/batteryIcon"
                        android:layout_marginEnd="52dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/battery"
                        android:src="@drawable/ic_battery"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/batteryLevelValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#73B95A"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/batteryIcon"
                        app:layout_constraintTop_toTopOf="@id/batteryIcon"
                        />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="#E0E0E0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signalPicture" />

                    <!-- ========== Второй контейнер (тип датчика, серийный, меню) ========== -->

                    <ImageButton
                        android:id="@+id/overflowButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/finish_button"
                        android:src="@drawable/dots"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1" />

                    <TextView
                        android:id="@+id/deviceTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/device_type"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1" />

                    <TextView
                        android:id="@+id/deviceTypeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/deviceTypeLabel"
                        app:layout_constraintTop_toTopOf="@id/deviceTypeLabel" />

                    <TextView
                        android:id="@+id/deviceSerialLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/serial_number"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/deviceTypeLabel" />

                    <TextView
                        android:id="@+id/deviceSerialTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/deviceSerialLabel"
                        app:layout_constraintTop_toTopOf="@id/deviceSerialLabel" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="#E0E0E0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/deviceSerialTextView" />

                    <!-- ========== Третий контейнер (MAC, версия ПО, версия HW, вес, давление, сохранить) ========== -->

                    <TextView
                        android:id="@+id/deviceMac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/device_mac"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2" />

                    <TextView
                        android:id="@+id/deviceMacTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/deviceMac"
                        app:layout_constraintTop_toTopOf="@id/deviceMac" />

                    <TextView
                        android:id="@+id/firmwareVersionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/firmware_version"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/deviceMac" />

                    <TextView
                        android:id="@+id/firmwareVersionValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/firmwareVersionTextView"
                        app:layout_constraintTop_toTopOf="@id/firmwareVersionTextView" />

                    <TextView
                        android:id="@+id/hardwareVersionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/hardware_version"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/firmwareVersionTextView" />

                    <TextView
                        android:id="@+id/hardwareVersionValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/hardwareVersionTextView"
                        app:layout_constraintTop_toTopOf="@id/hardwareVersionTextView" />

                    <TextView
                        android:id="@+id/weightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/weight"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/hardwareVersionTextView" />

                    <TextView
                        android:id="@+id/weightValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/weightTextView"
                        app:layout_constraintTop_toTopOf="@id/weightTextView" />

                    <TextView
                        android:id="@+id/pressureTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/pressure"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/weightTextView" />

                    <TextView
                        android:id="@+id/pressureValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/pressureTextView"
                        app:layout_constraintTop_toTopOf="@id/pressureTextView" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/finishButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#73B95A"
                        android:text="@string/save_button"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_save_to"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pressureTextView" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mainInfo" />

            <androidx.cardview.widget.CardView
                android:id="@+id/configurationCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mainInfo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/configurationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:context=".ui.ConfigurationFragment">

                    <TextView
                        android:id="@+id/configurationTitleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/configuration_settings"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Message Delivery Period -->
                    <TextView
                        android:id="@+id/messageDeliveryLabel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:labelFor="@id/messageDeliveryPeriodEditText"
                        android:text="@string/message_delivery_period"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/messageDeliveryPeriodEditText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/configurationTitleTextView" />

                    <EditText
                        android:id="@+id/messageDeliveryPeriodEditText"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:autofillHints="postalCode"
                        android:background="@android:drawable/edit_text"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/messageDeliveryLabel"
                        app:layout_constraintTop_toBottomOf="@id/configurationTitleTextView" />

                    <!-- Measurement Period -->
                    <TextView
                        android:id="@+id/measurementPeriodLabel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:labelFor="@id/measurementPeriodEditText"
                        android:text="@string/measurement_period"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/measurementPeriodEditText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/messageDeliveryPeriodEditText" />

                    <EditText
                        android:id="@+id/measurementPeriodEditText"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:autofillHints="postalCode"
                        android:background="@android:drawable/edit_text"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/measurementPeriodLabel"
                        app:layout_constraintTop_toBottomOf="@id/messageDeliveryPeriodEditText" />

                    <!-- Trailer: сменный / не сменный (чекбокс) -->
                    <TextView
                        android:id="@+id/trailerChangeableLabel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:text="@string/trailer_changeable"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/trailerChangeableCheckBox"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/measurementPeriodEditText" />

                    <CheckBox
                        android:id="@+id/trailerChangeableCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/trailerChangeableLabel"
                        app:layout_constraintTop_toBottomOf="@id/measurementPeriodEditText" />

                    <!-- Общее количество осей -->
                    <TextView
                        android:id="@+id/totalAxlesLabel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:text="@string/total_axles"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/totalAxlesEditText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/trailerChangeableCheckBox" />

                    <EditText
                        android:id="@+id/totalAxlesEditText"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/edit_text"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/totalAxlesLabel"
                        app:layout_constraintTop_toBottomOf="@id/trailerChangeableCheckBox" />

                    <!-- Общее количество датчиков -->
                    <TextView
                        android:id="@+id/totalSensorsLabel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:text="@string/total_sensors"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/totalSensorsEditText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/totalAxlesEditText" />

                    <EditText
                        android:id="@+id/totalSensorsEditText"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/edit_text"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/totalSensorsLabel"
                        app:layout_constraintTop_toBottomOf="@id/totalAxlesEditText" />

                    <!-- Power Mode Spinner -->
                    <TextView
                        android:id="@+id/installationPoint"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:text="@string/installation_point"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/installationPointSpinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/totalSensorsEditText" />

                    <Spinner
                        android:id="@+id/installationPointSpinner"
                        style="@style/CustomSpinnerStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/installationPoint"
                        app:layout_constraintTop_toBottomOf="@id/totalSensorsEditText" />


                    <TextView
                        android:id="@+id/numberOfSensorsOnAxle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:text="@string/number_of_sensors_per_axis"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/numberOfSensorsOnAxleEditText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/installationPoint" />

                    <EditText
                        android:id="@+id/numberOfSensorsOnAxleEditText"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/edit_text"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/totalSensorsLabel"
                        app:layout_constraintTop_toBottomOf="@id/installationPointSpinner" />

                    <EditText
                        android:id="@+id/stateNumber"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:autofillHints="postalCode"
                        android:background="@android:drawable/edit_text"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:hint="@string/stateNumber"
                        android:inputType="text"
                        android:maxLength="10"
                        android:padding="8dp"
                        android:paddingBottom="100dp"
                        android:textAllCaps="true"
                        android:textColor="#E41616"
                        android:textColorHint="#757575"
                        android:windowSoftInputMode="adjustResize"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/numberOfSensorsOnAxle"
                        tools:ignore="TextFields,VisualLintTextFieldSize" />

                    <Button
                        android:id="@+id/saveConfigurationButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:elevation="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:text="@string/save_button"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:visibility="gone"
                        app:cornerRadius="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/stateNumber" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/configurationCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/calibrationTableCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp">

                    <TextView
                        android:id="@+id/calibrationTitleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/calibration_table"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calibrationRecyclerView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:descendantFocusability="beforeDescendants"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/calibrationTitleTextView" />

                    <!-- Row 1 -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="16dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="16dp" />


                    <!-- Удалили saveTableButton -->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/readFromSensorButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#0094FF"
                        android:ellipsize="end"
                        android:text="@string/read_from_sensor"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        app:cornerRadius="12dp"
                        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                        app:layout_constraintStart_toStartOf="@id/guidelineStart"
                        app:layout_constraintTop_toBottomOf="@id/calibrationRecyclerView" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveToFileButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#73B95A"
                        android:ellipsize="end"
                        android:text="@string/save_to_file"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        app:cornerRadius="12dp"
                        app:layout_constraintEnd_toStartOf="@id/readFromFileButton"
                        app:layout_constraintStart_toStartOf="@id/guidelineStart"
                        app:layout_constraintTop_toBottomOf="@id/readFromSensorButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/readFromFileButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#BCC1CA"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/read_from_file"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        app:cornerRadius="12dp"
                        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                        app:layout_constraintStart_toEndOf="@id/saveToFileButton"
                        app:layout_constraintTop_toBottomOf="@id/readFromSensorButton" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/overlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Прогрессбар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>