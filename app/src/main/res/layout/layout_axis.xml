<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    android:backgroundTint="?attr/colorSurface"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/axisTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/axle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/axisTitleRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/axleSensorLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/axle_left"
                android:src="@drawable/axle_left" />

            <ImageView
                android:id="@+id/axleSensorCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/axle_center"
                android:src="@drawable/axle_center" />

            <ImageView
                android:id="@+id/axleSensorRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/axle_right"
                android:src="@drawable/axle_right" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:layout_gravity="center_horizontal"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/roboto_bold"
            android:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
