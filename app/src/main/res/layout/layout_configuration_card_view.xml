<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configurationCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="16dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/mainInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/configurationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="16dp"
        tools:context=".ui.ConfigurationFragment">

        <TextView
            android:id="@+id/configurationTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/configuration_settings"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Message Delivery Period -->
        <LinearLayout
            android:id="@+id/messageDeliveryBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/configurationTitleTextView">

            <TextView
                android:id="@+id/messageDeliveryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/message_delivery_period"
                android:textColor="#000000"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageButton
                        android:id="@+id/messageDeliveryMinus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/hardware_version"
                        android:labelFor="@id/messageDeliveryPeriodEditText"
                        android:src="@drawable/ic_minus" />

                    <EditText
                        android:id="@+id/messageDeliveryPeriodEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints="none"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/messageDeliveryPlus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/device_mac"
                        android:src="@drawable/ic_plus" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/measurementPeriodBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageDeliveryBlock">

            <TextView
                android:id="@+id/measurementPeriodLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/measurement_period"
                android:textColor="#000000"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageButton
                        android:id="@+id/measurementPeriodMinus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/add"
                        android:labelFor="@+id/measurementPeriodEditText"
                        android:src="@drawable/ic_minus" />

                    <EditText
                        android:id="@+id/measurementPeriodEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints="none"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/measurementPeriodPlus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/current_values"
                        android:src="@drawable/ic_plus" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Trailer: сменный / не сменный (чекбокс) -->
        <LinearLayout
            android:id="@+id/trailerChangeableBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/measurementPeriodBlock">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/trailerChangeableLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:text="@string/trailer_changeable"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trailerChoiceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <!-- Левая часть (ДА) -->
                    <TextView
                        android:id="@+id/choiceYes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/yes"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <!-- Разделитель -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <!-- Правая часть (НЕТ) -->
                    <TextView
                        android:id="@+id/choiceNo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/no"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Общее количество осей -->
        <LinearLayout
            android:id="@+id/totalAxlesBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trailerChangeableBlock">

            <TextView
                android:id="@+id/totalAxlesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/total_axles"
                android:textColor="#000000"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/totalAxlesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageButton
                        android:id="@+id/totalAxlesMinus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/ok"
                        android:labelFor="@+id/totalAxlesEditText"
                        android:src="@drawable/ic_minus" />

                    <EditText
                        android:id="@+id/totalAxlesEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints="none"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:inputType="number" />

                    <ImageButton
                        android:id="@+id/totalAxlesPlus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/configure_loaded"
                        android:src="@drawable/ic_plus" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Общее количество датчиков -->
        <LinearLayout
            android:id="@+id/totalSensorsBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalAxlesBlock">

            <TextView
                android:id="@+id/totalSensorsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/total_sensors"
                android:textColor="#000000"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/totalSensorsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageButton
                        android:id="@+id/totalSensorsMinus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/change_langauge"
                        android:labelFor="@+id/totalSensorsEditText"
                        android:src="@drawable/ic_minus" />

                    <EditText
                        android:id="@+id/totalSensorsEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:inputType="number" />

                    <ImageButton
                        android:id="@+id/totalSensorsPlus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/axis_config"
                        android:src="@drawable/ic_plus" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Power Mode Spinner -->
        <LinearLayout
            android:id="@+id/installationPointBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalSensorsBlock">

            <TextView
                android:id="@+id/installationPointLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/installation_point"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/installationPointSpinner"
                style="@style/CustomSpinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:elevation="6dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sensorsPerAxleBlock"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/installationPointBlock">

            <TextView
                android:id="@+id/numberOfSensorsOnAxle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/number_of_sensors_per_axis"
                android:textColor="#000000"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/sensorsPerAxleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageButton
                        android:id="@+id/sensorsPerAxleMinus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/app_name"
                        android:labelFor="@+id/numberOfSensorsOnAxleEditText"
                        android:src="@drawable/ic_minus" />

                    <EditText
                        android:id="@+id/numberOfSensorsOnAxleEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints="none"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:inputType="number" />

                    <ImageButton
                        android:id="@+id/sensorsPerAxlePlus"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/serial_number"
                        android:src="@drawable/ic_plus" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <EditText
            android:id="@+id/stateNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:autofillHints="postalCode"
            android:background="@drawable/edittext_rounded_background"
            android:elevation="6dp"
            android:gravity="center"
            android:hint="@string/stateNumber"
            android:inputType="text|textCapCharacters"
            android:maxLength="10"
            android:textAllCaps="true"
            android:textColor="#0094FF"
            android:textColorHint="#757575"
            android:minWidth="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sensorsPerAxleBlock"
            app:strokeWidth="0dp"
            tools:ignore="TextFields" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>